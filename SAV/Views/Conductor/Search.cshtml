@model SAV.Models.SearchConductorViewModel

@{
    ViewBag.Title = "Search";
}


<div id="content">
	<div class="headTables selected">
		<p>Buscar</p>
	</div>
    @using (Html.BeginForm())
    {
           @Html.ValidationSummary(false)
	<div class="contenidoDatos">
		<div class="datosInputs">
			<p class="edicion">@Html.LabelFor(model => model.Apellido)</p>
            @Html.TextBoxFor(model => model.Apellido)

			<p class="edicion">@Html.LabelFor(model => model.Nombre)</p>
            @Html.TextBoxFor(model => model.Nombre)
		</div>

        <div class="datosInputs">
			<p class="edicion">@Html.LabelFor(model => model.DNI)</p>
            @Html.TextBoxFor(model => model.DNI)

			<p class="edicion">@Html.LabelFor(model => model.Telefono)</p>
            @Html.TextBoxFor(model => model.Telefono)
		</div>
   
		<div class="botones">
			<div class="boton">
				<div class="inicioBotonGris"></div>
				<input id="buscar" class="centroBotonGris waiting" type="submit" value="Buscar"/>
				<div class="finBotonGris"></div>
			</div>
			<div class="boton">
				<div class="inicioBotonGris"></div>
                <input type="button" class="centroBotonGris waiting" value="Nuevo" onclick="location.href='@Url.Action("Create")'"></input>
				<div class="finBotonGris"></div>
			</div>
		</div>	
	</div>
    <div class="footerTables"></div>
    }
     <!-- RESULTADO TABLES -->
    <div id="partialViewConductores">
            @Html.Partial("_ConductoresTable", Model.Conductores)
    </div>
</div>
    