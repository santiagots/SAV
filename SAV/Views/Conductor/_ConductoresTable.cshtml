@using PagedList
@using PagedList.Mvc
@model IPagedList<SAV.Models.Conductor>

    <div class="alertTablesExtended" id="alertTablesExtended">
		<div class="seccion">
             @Html.PagedListPager((IPagedList)Model, page => Url.Action("SearchPagingConductores", new { pageNumber = page, apellido = ViewBag.apellido, nombre =  ViewBag.nombre, dni =  ViewBag.dni, telefono =  ViewBag.telefono })
                                                                                                    , PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new PagedListRenderOptions() { DisplayLinkToFirstPage = PagedListDisplayMode.Never, DisplayLinkToLastPage = PagedListDisplayMode.Never ,  DisplayLinkToNextPage = PagedListDisplayMode.IfNeeded, DisplayLinkToPreviousPage = PagedListDisplayMode.IfNeeded, DisplayLinkToIndividualPages = false, DisplayPageCountAndCurrentLocation = true, LinkToNextPageFormat = "", LinkToPreviousPageFormat = "", PageCountAndCurrentLocationFormat = "Mostrando Pagina {0} de {1}", }
                                                                                                    , new AjaxOptions() { HttpMethod = "GET",OnBegin="enableSpinner", OnSuccess="disableSpinner", UpdateTargetId = "partialViewConductores" }))

			<div class="headAlertTablesExtended selected">
				<p>Resultado</p>
				<a id="Busqueda" name="Busqueda" href="#" class="desplegado"></a>
			</div>
			<div id="tablaBusqueda" class="desplegableTablaCamp" style="display: block;">
				<table id="tablaParts" class="tablesorter">
					<thead>
						<tr class="headTitles noBorder">
							<th class="type2 type203"><p>Apellido</p><span class="ordenamiento"></span></th>
							<th class="type2 type203"><p>Nombre</p><span class="ordenamiento"></span></th>
							<th class="type2 type106"><p>CUIL</p><span class="ordenamiento"></span></th>
							<th class="type2 type203"><p>Domicilio</p><span class="ordenamiento"></span></th>
							<th class="type106"><p>Telefono</p><span class="ordenamiento"></span></th>
						</tr>
							
					</thead>
					<tbody>
                        @foreach (var item in Model)
                        {
						<tr>
							<td class="type2 type203 waiting" onclick="location.href='@Url.Action("Create", new { id = item.ID })'" ><p>@Html.DisplayFor(modelItem => item.Apellido)</p></td>
							<td class="type2 type203 waiting" onclick="location.href='@Url.Action("Create", new { id = item.ID })'" ><p>@Html.DisplayFor(modelItem => item.Nombre)</p></td>
							<td class="type2 type106 waiting" onclick="location.href='@Url.Action("Create", new { id = item.ID })'" ><p>@Html.DisplayFor(modelItem => item.CUIL)</p></td>
							<td class="type2 type203 waiting" onclick="location.href='@Url.Action("Create", new { id = item.ID })'" ><p>@Html.DisplayFor(modelItem => item.Domicilio.getDomicilio)</p></td>
							<td class="type106 waiting" onclick="location.href='@Url.Action("Create", new { id = item.ID })'" ><p>@Html.DisplayFor(modelItem => item.Telefono)</p></td>
						</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
    </div>	