@model List<SAV.Models.ClienteViaje>


    <div class="text">
        <p>El cliente ya se encuentra registrado en los siguientes viajes con misma fecha que el viaje seleccionado.</p>
    </div>
    <div class="alertTablesExtended" id="alertTablesExtended">
        <div class="seccion">
            <div class="headAlertTablesExtended selected">
                <p>Viajes</p>
            </div>
            <div id="tablaBusqueda" class="desplegableTablaCamp" style="display: block;">
                <table id="tablaParts" class="tablesorter">
                    <thead>
                        <tr class="headTitles noBorder">
                            <th class="type2 type106"><p>Origen</p><span class="ordenamiento"></span></th>
                            <th class="type2 type106"><p>Destino</p><span class="ordenamiento"></span></th>
                            <th class="type2 type203"><p>Fecha Salida</p><span class="ordenamiento"></span></th>
                            <th class="type2 type203"><p>Fecha Arribo</p><span class="ordenamiento"></span></th>
                            <th class="type204"><p>Servicio</p><span class="ordenamiento"></span></th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @if (item.Viaje.Origen != null)
                                {
                                    <td class="type2 type106"><p>@Html.DisplayFor(modelItem => item.Viaje.Origen.Nombre)</p></td>
                                }
                                else
                                {
                                    <td class="type2 type106"><p>@Html.DisplayFor(modelItem => item.Viaje.OrigenCerrado)</p></td>
                                }
                                @if (item.Viaje.Destino != null)
                                {
                                    <td class="type2 type106"><p>@Html.DisplayFor(modelItem => item.Viaje.Destino.Nombre)</p></td>
                                }
                                else
                                {
                                    <td class="type2 type106"><p>@Html.DisplayFor(modelItem => item.Viaje.DestinoCerrado)</p></td>
                                }
                                <td class="type2 type203"><p>@Html.DisplayFor(modelItem => item.Viaje.FechaSalida)</p></td>
                                <td class="type2 type203"><p>@Html.DisplayFor(modelItem => item.Viaje.FechaArribo)</p></td>
                                <td class="type204"><p>@Html.DisplayFor(modelItem => item.Viaje.Servicio)</p></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="botones">
        <div class="boton">
            <div class="inicioBotonGris"></div>
            <input id="Aceptar" class="centroBotonGris" type="button" value="Aceptar" onclick="$('#ViajesEnElMismoDia').dialog('close');"></input>
            <div class="finBotonGris"></div>
        </div>
        <div class="boton">
            <div class="inicioBotonGris"></div>
            <input id="Cancelar" class="centroBotonGris waiting disableValidation" type="button" value="Cancelar" onclick="$('#ViajesEnElMismoDia').dialog('close'); location.href='@Url.Action(ViewBag.From, "Viaje", new { id = ViewBag.IdViaje })'"></input>
            <div class="finBotonGris"></div>
        </div>
    </div>

