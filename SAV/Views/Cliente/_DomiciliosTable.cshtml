@using PagedList
@using PagedList.Mvc
@model IPagedList<SAV.Models.Domicilio>

<div class="alertTablesExtended" id="alertTablesExtended">
    <div class="seccion">
        @Html.PagedListPager((IPagedList)Model, page => Url.Action("PagingDomicilios", new { id = this.ViewData["ClienteId"], pageNumber = page  })
                                                                                                    , PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new PagedListRenderOptions() { DisplayLinkToFirstPage = PagedListDisplayMode.Never, DisplayLinkToLastPage = PagedListDisplayMode.Never, DisplayLinkToNextPage = PagedListDisplayMode.IfNeeded, DisplayLinkToPreviousPage = PagedListDisplayMode.IfNeeded, DisplayLinkToIndividualPages = false, DisplayPageCountAndCurrentLocation = true, LinkToNextPageFormat = "", LinkToPreviousPageFormat = "", PageCountAndCurrentLocationFormat = "Mostrando Pagina {0} de {1}", }
                                                                                                    , new AjaxOptions() { HttpMethod = "GET", OnBegin = "enableSpinner", OnSuccess = "disableSpinner", UpdateTargetId = "partialViewDomicilios" }))

        <div class="headAlertTablesExtended selected">
            <p>Domicilios</p>
            <a id="Busqueda" name="Busqueda" href="#" class="desplegado"></a>
        </div>
        <div id="tablaBusqueda" class="desplegableTablaCamp" style="display: block;">
            <table id="tablaParts" class="tablesorter">
                <thead>
                    <tr class="headTitles noBorder">
                        <th class="type2 type107"><p>Provincia</p><span class="ordenamiento"></span></th>
                        <th class="type2 type107"><p>Localidad</p><span class="ordenamiento"></span></th>
                        <th class="type2 type106"><p>Calle</p><span class="ordenamiento"></span></th>
                        <th class="type2 type122"><p>Numero</p><span class="ordenamiento"></span></th>
                        <th class="type2 type122"><p>Piso</p><span class="ordenamiento"></span></th>
                        <th class="type2 type380"><p>Comentario</p><span class="ordenamiento"></span></th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="type2 type107" onclick="UpdateDomicilio(@item.ID, @this.ViewData["ClienteId"])" class="type2 type106"><p>@Html.DisplayFor(modelItem => item.Provincia.Nombre)</p></td>
                            <td class="type2 type107" onclick="UpdateDomicilio(@item.ID, @this.ViewData["ClienteId"])" class="type2 type106"><p>@Html.DisplayFor(modelItem => item.Localidad.Nombre)</p></td>
                            <td class="type2 type106" onclick="UpdateDomicilio(@item.ID, @this.ViewData["ClienteId"])" class="type2 type203"><p>@Html.DisplayFor(modelItem => item.Calle)</p></td>
                            <td class="type2 type122" onclick="UpdateDomicilio(@item.ID, @this.ViewData["ClienteId"])" class="type2 type203"><p>@Html.DisplayFor(modelItem => item.Numero)</p></td>
                            <td class="type2 type122" onclick="UpdateDomicilio(@item.ID, @this.ViewData["ClienteId"])" class="type2 type204"><p>@Html.DisplayFor(modelItem => item.Piso)</p></td>
                            <td class="type2 type380" onclick="UpdateDomicilio(@item.ID, @this.ViewData["ClienteId"])" class="type2 type204"><p>@Html.DisplayFor(modelItem => item.Comentario)</p></td>
                            <td class="Type30">
                                <a onclick="DeleteDomicilio(@item.ID, @this.ViewData["ClienteId"])"><span id="Span43" class="action retirar" title="Eliminar" /></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>