@using PagedList
@using PagedList.Mvc
@model IPagedList<SAV.Models.Pasajeros>

<div class="alertTablesExtended" id="partialViewPasajeros">
    <div class="seccion">

        @Html.PagedListPager((IPagedList)Model, page => Url.Action("CierrePagingPasajeros", new { IdViaje = ViewBag.IdViaje, pageNumber = page})
                                                                                            , PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new PagedListRenderOptions() { DisplayLinkToFirstPage = PagedListDisplayMode.Never, DisplayLinkToLastPage = PagedListDisplayMode.Never ,  DisplayLinkToNextPage = PagedListDisplayMode.IfNeeded, DisplayLinkToPreviousPage = PagedListDisplayMode.IfNeeded, DisplayLinkToIndividualPages = false, DisplayPageCountAndCurrentLocation = true, LinkToNextPageFormat = "", LinkToPreviousPageFormat = "", PageCountAndCurrentLocationFormat = "Mostrando Pagina {0} de {1}", }
                                                                                            , new AjaxOptions() { HttpMethod = "GET",OnBegin="setAsistenciaPasajeros", OnSuccess="disableSpinner", UpdateTargetId = "partialViewPasajeros" }))

        <div class="headAlertTablesExtended selected">
            <p>Pasajeros</p>
            <a id="Pasajeros" name="Pasajeros" href="#" class="desplegado"></a>
        </div>
        <div id="tablaPasajeros" class="desplegableTablaCamp" style="display: block;">
            <table id="tablaParts" class="tablesorter">
                <thead>
                    <tr class="headTitles noBorder">
                        <th class="type2 type209">
                            <p>@Html.DisplayNameFor(model => model.First().Apellido)</p>
                            <span class="ordenamiento"></span></th>
                        <th class="type2 type209">
                            <p>@Html.DisplayNameFor(model => model.First().Nombre)</p>
                            <span class="ordenamiento"></span></th>
                        <th class="type2 type166">
                            <p>@Html.DisplayNameFor(model => model.First().DNI)</p>
                            <span class="ordenamiento"></span></th>
                        <th class="type2 type203">
                            <p>Dirección</p>
                            <span class="ordenamiento"></span></th>
                        <th class="type2 type119">
                            <p>@Html.DisplayNameFor(model => model.First().Telefono)</p>
                            <span class="ordenamiento"></span></th>
                        <th class="type2 type119">
                            <p>Viajes Ausentes</p>
                            <span class="ordenamiento"></span></th>
                        <th class="type2 type112">
                            <p>@Html.DisplayNameFor(model => model.First().Pago)</p>
                            <span class="ordenamiento"></span></th>
                        <th class="type5">Presente</th>
                    </tr>

                </thead>
                <tbody id="tablaPasajeros">
                    @for (int i = 0; i < Model.Count; i++ )
                    {
                        <tr>
                            @Html.HiddenFor((m => m[i].ClienteViajeID))
                            <td onclick="$('form').resetValidation(); location.href='@Url.Action("Details", "Cliente", new { id = Model[i].ClienteID, idViaje = ViewBag.IdViaje, From = "Close" })'" class="type2 type209 waitingMenuBar">
                                <p>@Html.DisplayFor(m => m[i].Apellido)</p>
                            </td>
                            <td onclick="$('form').resetValidation(); location.href='@Url.Action("Details", "Cliente", new { id = Model[i].ClienteID, idViaje = ViewBag.IdViaje, From = "Close" })'" class="type2 type209 waitingMenuBar">
                                <p>@Html.DisplayFor(m => m[i].Nombre)</p>
                            </td>
                            <td onclick="$('form').resetValidation(); location.href='@Url.Action("Details", "Cliente", new { id = Model[i].ClienteID, idViaje = ViewBag.IdViaje, From = "Close" })'" class="type2 type166 waitingMenuBar">
                                <p>@Html.DisplayFor(m => m[i].DNI)</p>
                            </td>
                            <td onclick="$('form').resetValidation(); location.href='@Url.Action("Details", "Cliente", new { id = Model[i].ClienteID, idViaje = ViewBag.IdViaje, From = "Close" })'" class="type2 type203 waitingMenuBar">
                                <p>@Html.DisplayFor(m => m[i].Domicilio)</p>
                            </td>
                            <td onclick="$('form').resetValidation(); location.href='@Url.Action("Details", "Cliente", new { id = Model[i].ClienteID, idViaje = ViewBag.IdViaje, From = "Close" })'" class="type2 type119 waitingMenuBar">
                                <p>@Html.DisplayFor(m => m[i].Telefono)</p>
                            </td>
                            <td onclick="$('form').resetValidation(); location.href='@Url.Action("Details", "Cliente", new { id = Model[i].ClienteID, idViaje = ViewBag.IdViaje, From = "Close" })'" class="type2 type119 waitingMenuBar">
                                <p>@Html.DisplayFor(m => m[i].Ausencias)</p>
                            </td>
                            <td onclick="$('form').resetValidation(); location.href='@Url.Action("Details", "Cliente", new { id = Model[i].ClienteID, idViaje = ViewBag.IdViaje, From = "Close" })'" class="type2 type112 waitingMenuBar">
                                <p>@Html.EditorFor(m => m[i].Pago)</p>
                            </td>
                            <td onclick="$('form').resetValidation(); location.href='@Url.Action("Details", "Cliente", new { id = Model[i].ClienteID, idViaje = ViewBag.IdViaje, From = "Close" })'" class="type5 waitingMenuBar">
                                <p>@Html.EditorFor(m =>Model[i].Presente)</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>