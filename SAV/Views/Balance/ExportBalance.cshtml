@using SAV.Models
@model SAV.Models.BalanceViewModel
@{
    Layout = "";
}

<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
</head>

<style type="text/css">
.site-title {
    color: #989898;
    font-family: Rockwell, Consolas, "Courier New", Courier, monospace;
    font-size: 2em;
    margin: 0;
    text-align: center;
}

.headTables1{
    background-color:#C8C8C8;
    font-family: Rockwell, Consolas, "Courier New", Courier, monospace;
    border: solid;
    text-align: center;
}

.headTables2{
    color: #989898;
    font-family: Rockwell, Consolas, "Courier New", Courier, monospace;
    text-align: center;
    font-weight: bold;
}

.datosInputs {
    color: #666666;
    font-family: verdana;
    font-size: 10px;
	width: 100px;
    border: solid;
    min-height:40px;
}
</style>

<table style="border: solid">
    <tr>
        <td colspan="2" class="site-title">BUSES LA ESTACION</td>
    </tr>

    
    <tr>
        <td colspan="2" class="headTables2">AV. VIYTES 40 - CHACABUCO - CP 6740</td>
    </tr>
    <tr>
        <td colspan="2" class="headTables2">TELÉFONO: 02352 45-1097</td>
    </tr>
    <tr>
        <td colspan="2" class="headTables2">CUIT: XX-XXXXXXXX-X</td>
    </tr>
    <tr>
        <td colspan="2" class="headTables2">Cierre día @ViewBag.fecha</td>
    </tr>
    @foreach (var veiculos in Model.Veiculos)
    {
        <tr>
            <td class="headTables1" style="width: 510px">Cod.:@veiculos.Id Concepto de Servicio:@veiculos.Servicio Origen:@veiculos.Origen Destino:@veiculos.Destino Salida:@veiculos.HoraSalida Arribo:@veiculos.HoraArribo Patente:@veiculos.Patente Interno:@veiculos.Interno</td>
            <td class="headTables1" style="width: 85px">Importe</td>
        </tr>
        foreach (var item in veiculos.Items)
        {
        <tr>
            <td class="datosInputs" style="width: 510px">@Html.DisplayFor(modelItem => item.Concepto)</td>
            <td class="datosInputs" style="width: 75px">@Html.DisplayFor(modelItem => item.Importe)</td>
        </tr>
        }

        <tr>
            <td class="headTables1" style="width: 510px">Total</td>
            <td class="headTables1" style="width: 75px">@veiculos.total</td>
        </tr>
    }
</table>